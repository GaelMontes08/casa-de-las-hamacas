<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-md z-50 border-b border-neutral-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/" class="font-display text-2xl font-bold text-primary-800">
          Casa de las Hamacas
        </a>
      </div>
      
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#inicio" class="text-neutral-700 hover:text-primary-600 transition-colors px-3 py-2 text-sm font-medium">
            Inicio
          </a>
          <a href="#productos" class="text-neutral-700 hover:text-primary-600 transition-colors px-3 py-2 text-sm font-medium">
            Productos
          </a>
          <a href="#nosotros" class="text-neutral-700 hover:text-primary-600 transition-colors px-3 py-2 text-sm font-medium">
            Nosotros
          </a>
          <a href="#contacto" class="bg-primary-600 text-white hover:bg-primary-700 px-6 py-2 rounded-full text-sm font-medium transition-colors">
            Contacto
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" id="mobile-menu-button" class="text-neutral-700 hover:text-primary-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-neutral-200">
      <a href="#inicio" class="text-neutral-700 hover:bg-primary-50 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">
        Inicio
      </a>
      <a href="#productos" class="text-neutral-700 hover:bg-primary-50 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">
        Productos
      </a>
      <a href="#nosotros" class="text-neutral-700 hover:bg-primary-50 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">
        Nosotros
      </a>
      <a href="#contacto" class="text-neutral-700 hover:bg-primary-50 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium">
        Contacto
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
