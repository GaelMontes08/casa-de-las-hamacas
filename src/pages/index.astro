---
import { SEO } from "astro-seo";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Products from "../components/Products.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

const title = "Casa de las Hamacas - Comodidad y Estilo para tu Hogar";
const description = "Descubre nuestra colección exclusiva de hamacas artesanales. Calidad superior, diseños únicos y la mejor comodidad para tu espacio de relajación.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "/og-image.jpg",
        },
        optional: {
          description: description,
          siteName: "Casa de las Hamacas",
        }
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: "/og-image.jpg",
      }}
      extend={{
        link: [
          { rel: "preconnect", href: "https://fonts.googleapis.com" },
          { rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: "anonymous" },
          { rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" }
        ],
        meta: [
          { name: "keywords", content: "hamacas, hamacas artesanales, hamacas mexicanas, descanso, relajación, decoración hogar" },
          { name: "author", content: "Casa de las Hamacas" },
        ],
      }}
    />
  </head>
  <body class="antialiased bg-neutral-50 text-neutral-900">
    <Navigation />
    <main>
      <Hero />
      <Features />
      <Products />
      <About />
      <Contact />
    </main>
    <Footer />
  </body>
</html>
